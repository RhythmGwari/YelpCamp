<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				Yelp Camp
			</p>
			<div class="list-group">
				<li class="list-group-item active">info1</li>
				<li class="list-group-item">info2</li>
				<li class="list-group-item">info3</li>
			</div>
			<div class="my-2">
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13462.520999942537!2d77.60572672282711!3d32.48258019780651!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3903f599418ac95b%3A0x13f9d535285dabf9!2sChandra%20Taal!5e0!3m2!1sen!2sin!4v1593762321588!5m2!1sen!2sin" width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
			</div>
		
		</div>
		<div class="col-md-9 my-2">
			<figure class="figure">
				<img class="figure-img img-fluid" src="<%= campground.image%>">
				<figcaption class="figure-caption text-right">Rs.<%= campground.price%>/night</figcaption>
				<figcaption class="figure-caption">
					<h4>
						<a href=""><%=campground.name%></a>
						
					</h4>
				<a></a>
				<h6>
					Campground ratings ~ <%=campground.ratings%>/5
				</h6>
				</figcaption>
				<figcaption class="figure-caption">
					<%= campground.description %>
				</figcaption>
				<figcaption class="figure-caption" style="text-align:right">
					Submitted by~ <%= campground.author.username %>
				</figcaption>
				<figcaption class="figure-caption">
				<% if(currentUser && campground.author.id.equals(currentUser.id)){ %>	
					<a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-warning btn-sm">Edit</a>
					<form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST" style="display:inline">
						<button class="btn btn-danger btn-sm">
							Delete
						</button>
					</form>
				<% } %>
				</figcaption>
			</figure>
			<div class="card text-right">
				<div class="card-header">
					<a  href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-sm btn-success">Add a Comment</a>
					<hr>
					<% campground.Comment.forEach(function(comment){ %>
						<div class="row commentss">							
							<div class="text-left col-md-12">
								<strong ><%= comment.author.username  %></strong>
									<span class="days">10 Days ago</span><br class="line">
								<%= comment.text %>	
							<br>
								<% if(currentUser && comment.author.id.equals(currentUser.id)){ %>	
								<a class="btn btn-warning btn-sm button" 
                               href="/campgrounds/<%=campground._id %>/comments/<%=comment._id %>/edit">
									Edit
								</a>
								<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST" style="display:inline">
									<button class="btn btn-danger btn-sm button">
										Delete
									</button>
								</form>	
								<% } %>
							</div>
						</div>
					<% }) %>
				</div>
			</div>
		<a href="/campgrounds">GO BACK</a>

		</div>
	</div>
</div>	
<%- include("../partials/footer") %>